<%= form_for @list do |f| %>
	<% if @list.errors.any? %>
	<ul>
		<% @list.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>


	<%= f.label :list %>:
	<%= f.text_field :title %>
	<br>
	<%= f.fields_for :chores do |c| %>
		<%= c.label :task %>
		<%= c.text_field :task %>
		<% end %>
		<br>

	
		<%= f.submit %>
	<% end %>



