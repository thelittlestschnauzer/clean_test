
<section class="section">
  <div class="columns is-centered">
    <div class="column is-4">
      <h2 class="title is-2">Create Your Family</h2>


      <%= simple_form_for @family do |f| %>

        <div class="field">
          <div class="control">
          	<%= f.label :name %>
          	<%= f.text_field :name %>
          </div>
        </div>

        <div class="field">
        	<div class="control">
        		<h5 class="subtitle">Add User</h5>
        		<%= f.collection_select :user_id, User.all, :id, :first_name %>
        		<%= f.fields_for :user do |u| %>
        			
        			or create a new user to add:
        			<br />
        			<%= u.label :first_name %>
        			<%= u.text_field :first_name %>
        		<% end %>
        	</div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'button is-link' %>
        </div>
      <% end %>

    </div>
  </div>
</section>
